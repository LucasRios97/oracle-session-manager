# ==========================================
# Oracle Session Manager - Configuracion
# ==========================================

# Configuracion del Servidor
PORT=3000

# Seguridad de Sesiones HTTP
# IMPORTANTE: Cambia esto a una clave aleatoria y segura en produccion
SESSION_SECRET=change-me-to-random-secure-key

# Configuracion de Pool de Conexiones
# Estos valores se aplican a todos los pools creados por usuario
POOL_MIN=2
POOL_MAX=10
POOL_INCREMENT=2

# Conexion por Defecto (Opcional)
# Esta cadena aparecera pre-llenada en el formulario de login
DEFAULT_CONNECTION_STRING=//hostname:port/service_name

# ==========================================
# Nota: Las credenciales de base de datos
# ya NO se configuran aqui. Cada usuario
# ingresa con sus propias credenciales.
# ==========================================
